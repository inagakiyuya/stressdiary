<% if current_user.bookmark?(mean) %>
  <%= link_to mean_bookmark_path(mean), data: { turbo_method: :delete } do %>
    <i class="bi bi-bookmark-check-fill"></i>
    UnBookmark
  <% end %>
<% else %>
  <%= link_to mean_bookmark_path(mean), data: { turbo_method: :post } do %>
    <i class="bi bi-bookmark-check"></i>
    Bookmark
  <% end %>
<% end %>
