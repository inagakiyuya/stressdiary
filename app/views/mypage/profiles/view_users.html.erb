<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.decorate.avatar.variant(resize_to_limit: [200, 200]), class: 'avatar-xl rounded-circle' %>
        <% else %>
          <%= image_tag "user-default-image.png", class: 'avatar-xl rounded-circle' %>
        <% end %>
      </div>
      <% if @user != current_user %>
        <%= link_to "ユーザーを通報", new_report_path(user_id: @user.id), class: "btn btn-danger" %>
      <% end %>
    </div>
    <hr class="my-5">
    <div>
      <h4 class="mb-0">Personal Details</h4>
      <div class="mb-3">
        <label for="email-field">Name</label></br>
        <%= @user.name %>
      </div>
      <div class="mb-3">
        <label for="email-field">Email</label></br>
        <%= @user.email %>
      </div> 
    </div>
  </div>
</div>
