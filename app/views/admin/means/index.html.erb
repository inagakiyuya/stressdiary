<div class="container mb-5 pt-2">
  <h2>ストレス解消法一覧</h2>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">ストレス解消法ID</th>
          <th scope="col">タイトル</th>
          <th scope="col">ユーザー名</th>
          <th scope="col">作成日時</th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @means %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= paginate @means %>
    </div>
  </div>
</div>
